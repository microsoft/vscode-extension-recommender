{
	"compilerOptions": {
        "module": "CommonJS",
		"target": "ES6",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"outDir": "dist"
	},
	"include": [
		"lib/**/*.ts"
	]
}
